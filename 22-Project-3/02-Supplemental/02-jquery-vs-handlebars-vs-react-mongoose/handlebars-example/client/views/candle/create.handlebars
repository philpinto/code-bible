<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Create Candle</h2>
        <form class="create-candle" novalidate>
            <div class="form-group">
                <label for="candle-name">Name</label>
                <input type="text" class="form-control" id="candle-name" name="candle-name" placeholder="Name"
                    pattern=".*\S+.*" required>
                <div class="invalid-feedback">
                    Name is required.
                </div>
            </div>
            <div class="form-group">
                <label for="candle-scent">Scent</label>
                <input type="text" class="form-control" id="candle-scent" name="candle-scent" placeholder="Scent"
                    pattern=".*\S+.*" required>
                <div class="invalid-feedback">
                    Scent is required.
                </div>
            </div>
            <div class="form-group">
                <label for="candle-height">Height</label>
                <input type="number" class="form-control" id="candle-height" name="candle-height" placeholder="Height"
                    required>
                <div class="invalid-feedback">
                    Height is required.
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="/js/candle/create.js"></script>