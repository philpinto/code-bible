<form class="user-form">
    <div class="form-group">
        <label for="email">Email:</label>
        <input id="email" name="email" type="email" class="form-control" placeholder="Enter your email">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input id="password" name="password" type="password" class="form-control"
            placeholder="Enter password">
    </div>
    {{#if isSignUpPage}} 
    <div class="form-group">
        <label for="re-password">Re-enter Password:</label>
        <input id="re-password" name="re-password" type="password" class="form-control"
            placeholder="Re-enter password">
    </div>
    {{/if}}
    <button id="submit" type="submit" class="btn btn-primary">{{#if isSignUpPage}}Sign Up{{else}}Login{{/if}}</button>
</form>