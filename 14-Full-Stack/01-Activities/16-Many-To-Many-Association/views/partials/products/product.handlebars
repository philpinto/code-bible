<h4 class="mt-3">
    {{name}}
</h4>
<div>{{description}}</div>
<div>
    <a href="/products/edit/{{id}}" class="btn btn-primary" type="button">
        <i class="fa fa-pencil"></i>
    </a>
    {{#if @root.list}}
    <a href="/products/view/{{id}}" class="btn btn-primary" type="button">
        <i class="fa fa-search"></i>
    </a>
    <button data-id="{{id}}" class="delete-product-btn btn btn-danger" type="button">
        <i class="fa fa-trash"></i>
    </button>
    {{/if}}
</div>
{{#unless @root.list}}
<div class="mt-1 mb-1">
    {{> stores/table }}
    <a href="/inventory/create/product/{{id}}" class="btn btn-secondary" type="button"><i class="fa fa-plus"></i> Add
        Store</a>
</div>
{{/unless}}
{{#if @root.list}} {{/if}}